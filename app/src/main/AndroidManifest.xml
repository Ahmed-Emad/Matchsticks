        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".Load_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullPanelTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main_Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullScreenTheme" >
        </activity>
        <activity
            android:name=".ChooseLevel_Activity"
            android:label="@string/title_activity_choose_level_"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullScreenTheme" >
        </activity>
        <activity
            android:name=".Levels_Activity"
            android:label="@string/title_activity_levels_"
            android:screenOrientation="landscape"
            android:theme="@style/MyFullScreenTheme" >
        </activity>
        <activity
            android:name=".About_Activity"
            android:label="@string/title_activity_about_"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
